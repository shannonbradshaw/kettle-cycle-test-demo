<?xml version="1.0" ?>
<!--
  Kettle Cycle Test World

  A work cell for testing kettle pick-and-place cycles:
  - Work table with aluminum extrusion frame
  - UFFactory xArm6 mounted on table
  - Kettle with contact sensor
  - Overhead camera for monitoring
  - Force plate (optional) under kettle placement zone
-->
<sdf version="1.9">
  <world name="kettle_test">

    <!-- Physics settings -->
    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <!-- Required plugins -->
    <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics"/>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster"/>
    <plugin filename="gz-sim-contact-system" name="gz::sim::systems::Contact"/>

    <!-- ==================== LIGHTING ==================== -->

    <!-- Overhead industrial lighting -->
    <light type="directional" name="overhead_light">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 3 0 0 0</pose>
      <diffuse>0.9 0.9 0.9 1</diffuse>
      <specular>0.3 0.3 0.3 1</specular>
      <direction>0 0 -1</direction>
    </light>

    <!-- Fill light from side -->
    <light type="directional" name="fill_light">
      <cast_shadows>false</cast_shadows>
      <pose>2 2 2 0 0 0</pose>
      <diffuse>0.4 0.4 0.4 1</diffuse>
      <direction>-0.5 -0.5 -0.5</direction>
    </light>

    <!-- Back fill -->
    <light type="directional" name="back_light">
      <cast_shadows>false</cast_shadows>
      <pose>-2 0 2 0 0 0</pose>
      <diffuse>0.2 0.2 0.25 1</diffuse>
      <direction>0.5 0 -0.5</direction>
    </light>

    <!-- ==================== FLOOR ==================== -->

    <model name="floor">
      <static>true</static>
      <pose>0 0 0 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>3 3</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>3 3</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.25 0.25 0.28 1</ambient>
            <diffuse>0.25 0.25 0.28 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- ==================== WORK TABLE ==================== -->
    <!--
      Aluminum extrusion style table (like 80/20)
      Surface at z=0.75m (standard work height)
      Size: 1.0m x 0.6m
    -->

    <model name="work_table">
      <static>true</static>
      <pose>0.4 0 0 0 0 0</pose>
      <link name="table_link">

        <!-- Table surface (black phenolic) -->
        <collision name="surface_collision">
          <pose>0 0 0.74 0 0 0</pose>
          <geometry>
            <box><size>1.0 0.6 0.02</size></box>
          </geometry>
          <surface>
            <friction>
              <ode><mu>0.9</mu><mu2>0.9</mu2></ode>
            </friction>
          </surface>
        </collision>
        <visual name="surface_visual">
          <pose>0 0 0.74 0 0 0</pose>
          <geometry>
            <box><size>1.0 0.6 0.02</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.1 0.1 0.1 1</diffuse>
          </material>
        </visual>

        <!-- Aluminum extrusion legs (40mm profile) -->
        <visual name="leg_fl">
          <pose>0.45 0.25 0.365 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.73</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient><diffuse>0.7 0.7 0.7 1</diffuse></material>
        </visual>
        <visual name="leg_fr">
          <pose>0.45 -0.25 0.365 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.73</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient><diffuse>0.7 0.7 0.7 1</diffuse></material>
        </visual>
        <visual name="leg_bl">
          <pose>-0.45 0.25 0.365 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.73</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient><diffuse>0.7 0.7 0.7 1</diffuse></material>
        </visual>
        <visual name="leg_br">
          <pose>-0.45 -0.25 0.365 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.73</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient><diffuse>0.7 0.7 0.7 1</diffuse></material>
        </visual>

        <!-- Cross braces (front/back) -->
        <visual name="brace_front">
          <pose>0 0.25 0.1 0 0 0</pose>
          <geometry><box><size>0.86 0.04 0.04</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient></material>
        </visual>
        <visual name="brace_back">
          <pose>0 -0.25 0.1 0 0 0</pose>
          <geometry><box><size>0.86 0.04 0.04</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient></material>
        </visual>

        <!-- Cross braces (sides) -->
        <visual name="brace_left">
          <pose>0.45 0 0.1 0 0 0</pose>
          <geometry><box><size>0.04 0.46 0.04</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient></material>
        </visual>
        <visual name="brace_right">
          <pose>-0.45 0 0.1 0 0 0</pose>
          <geometry><box><size>0.04 0.46 0.04</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient></material>
        </visual>

        <!-- Top frame rails -->
        <visual name="rail_front">
          <pose>0 0.25 0.71 0 0 0</pose>
          <geometry><box><size>0.86 0.04 0.04</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient></material>
        </visual>
        <visual name="rail_back">
          <pose>0 -0.25 0.71 0 0 0</pose>
          <geometry><box><size>0.86 0.04 0.04</size></box></geometry>
          <material><ambient>0.7 0.7 0.7 1</ambient></material>
        </visual>

      </link>
    </model>

    <!-- ==================== FORCE PLATE ==================== -->
    <!--
      A designated zone where the kettle is placed down.
      Has a contact sensor to detect placement forces.
    -->

    <model name="force_plate">
      <static>true</static>
      <pose>0.7 0 0.76 0 0 0</pose>
      <link name="plate_link">
        <visual name="visual">
          <geometry>
            <box><size>0.15 0.15 0.01</size></box>
          </geometry>
          <material>
            <ambient>0.3 0.5 0.3 1</ambient>
            <diffuse>0.3 0.5 0.3 1</diffuse>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <box><size>0.15 0.15 0.01</size></box>
          </geometry>
          <surface>
            <friction>
              <ode><mu>0.9</mu></ode>
            </friction>
          </surface>
        </collision>

        <!-- Contact sensor for force detection -->
        <sensor name="force_plate_contact" type="contact">
          <always_on>true</always_on>
          <update_rate>50</update_rate>
          <contact>
            <collision>collision</collision>
          </contact>
          <topic>force_plate/contact</topic>
        </sensor>
      </link>
    </model>

    <!-- ==================== XARM6 ==================== -->
    <!--
      UFFactory xArm6 mounted on table
      Positioned toward the back-left of the table
    -->

    <include>
      <uri>model://xarm6</uri>
      <name>xarm6</name>
      <pose>0.1 0 0.75 0 0 0</pose>
    </include>

    <!-- Fix arm to world (simulates bolting to table) -->
    <joint name="xarm6_mount" type="fixed">
      <parent>world</parent>
      <child>xarm6::link_base</child>
    </joint>

    <!-- ==================== KETTLE ==================== -->
    <!--
      Kettle placed on table, within arm reach
      Initial position: on force plate (pickup position)
    -->

    <include>
      <uri>model://kettle</uri>
      <name>kettle</name>
      <pose>0.7 0 0.77 0 0 1.57</pose>  <!-- Rotated so handle faces arm -->
    </include>

    <!-- ==================== OVERHEAD CAMERA ==================== -->
    <!--
      Monitors the work cell from above
      Angled view to see both arm and kettle
    -->

    <model name="overhead_camera">
      <static>true</static>
      <pose>0.4 -0.6 1.5 0 0.7 1.57</pose>

      <link name="camera_link">
        <!-- Camera housing -->
        <visual name="housing">
          <geometry>
            <box><size>0.08 0.03 0.03</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.1 0.1 0.1 1</diffuse>
          </material>
        </visual>

        <!-- RGB Camera -->
        <sensor name="overhead_rgb" type="camera">
          <always_on>true</always_on>
          <update_rate>30</update_rate>
          <topic>overhead_camera</topic>
          <camera>
            <horizontal_fov>1.2</horizontal_fov>
            <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.1</near>
              <far>10.0</far>
            </clip>
          </camera>
        </sensor>
      </link>

      <!-- Mount arm -->
      <link name="mount">
        <pose>-0.15 0.3 -0.4 0 -0.7 -1.57</pose>
        <visual name="visual">
          <geometry>
            <box><size>0.02 0.02 0.8</size></box>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
          </material>
        </visual>
      </link>

      <joint name="mount_joint" type="fixed">
        <parent>mount</parent>
        <child>camera_link</child>
      </joint>
    </model>

  </world>
</sdf>
